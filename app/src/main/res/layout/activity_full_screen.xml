<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cfd8e7"
    tools:context="com.example.asami.loginapp.FullScreenActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="252dp"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteY="252dp"
        tools:layout_editor_absoluteX="211dp"
        android:layout_marginRight="63dp"
        android:layout_marginEnd="63dp"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/deposit"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="13dp"
        app:srcCompat="@drawable/deposit"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/balance"
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/cashbalance"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/button"
        android:layout_alignLeft="@+id/deposit"
        android:layout_alignStart="@+id/deposit" />

</RelativeLayout>
